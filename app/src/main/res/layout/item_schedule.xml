<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="schedule"
                type="com.example.igonzalez.airlinescheduleapp.model.Entities.Schedule"/>
    </data>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

            <TextView
                    android:id="@+id/txt_schedule_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="@{schedule.totalJourney.duration}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:id="@+id/view_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#86B4B4B4"
                    android:layout_margin="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_schedule_duration"/>

            <TextView
                    android:id="@+id/txt_schedule_origin_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{schedule.flight.arrival.scheduledTimeLocal.dateTime.substring(11)}"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_separator"/>

            <TextView
                    android:id="@+id/txt_schedule_origin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{schedule.flight.departure.airportCode}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_schedule_origin_time"/>

            <TextView
                    android:id="@+id/txt_schedule_destination_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{schedule.flight.arrival.scheduledTimeLocal.dateTime.substring(11)}"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_separator"/>

            <TextView
                    android:id="@+id/txt_schedule_destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{schedule.flight.arrival.airportCode}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_schedule_destination_time"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>